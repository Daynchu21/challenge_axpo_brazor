@* Reusable Error Message Component *@
<div class="bg-red-50 border-l-4 border-red-500 p-4 my-4" role="alert" aria-live="assertive">
    <div class="flex items-start">
        <div class="flex-shrink-0">
            <svg class="h-5 w-5 text-red-400" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                <path fill-rule="evenodd"
                    d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.28 7.22a.75.75 0 00-1.06 1.06L8.94 10l-1.72 1.72a.75.75 0 101.06 1.06L10 11.06l1.72 1.72a.75.75 0 101.06-1.06L11.06 10l1.72-1.72a.75.75 0 00-1.06-1.06L10 8.94 8.28 7.22z"
                    clip-rule="evenodd" />
            </svg>
        </div>
        <div class="ml-3 flex-1">
            <h3 class="text-sm font-medium text-red-800">@Title</h3>
            @if (!string.IsNullOrEmpty(Message))
            {
                <div class="mt-2 text-sm text-red-700">
                    <p>@Message</p>
                </div>
            }
            @if (OnRetry.HasDelegate)
            {
                <div class="mt-4">
                    <button type="button" @onclick="OnRetry"
                        class="rounded-md bg-red-50 px-3 py-2 text-sm font-semibold text-red-800 hover:bg-red-100 focus:outline-none focus:ring-2 focus:ring-red-600 focus:ring-offset-2 focus:ring-offset-red-50">
                        Try Again
                    </button>
                </div>
            }
        </div>
    </div>
</div>

@code {
    [Parameter]
    public string Title { get; set; } = "Error";

    [Parameter]
    public string? Message { get; set; }

    [Parameter]
    public EventCallback OnRetry { get; set; }
}